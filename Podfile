source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.0'

use_frameworks!

pod 'AFNetworking'                    # Delightful networking library
pod 'AFNetworking-RACExtensions', '0.1.6'
pod 'ALAlertBanner', path: 'Pods/ALAlertBanner'
pod 'APAddressBook/Swift'             # Address book handling
pod 'CocoaLumberjack'                 # Better Logging
pod 'INTULocationManager'             # Better Location Manager
pod 'JGProgressHUD'                   # Customizable HUD with progress
pod 'MaterialKit'
pod 'ReactiveCocoa'
pod 'ReactiveViewModel'               # ReactiveCocoa + ViewModel
pod 'SDWebImage'                      # Cached image fetching
